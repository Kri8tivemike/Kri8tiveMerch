# Appwrite Configuration
# Replace these values with your own Appwrite project credentials

# Appwrite endpoint (required)
VITE_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# Your Appwrite project ID (required)
VITE_APPWRITE_PROJECT_ID=your-appwrite-project-id

# Your Appwrite database ID (required)
VITE_APPWRITE_DATABASE_ID=kri8tiveblanks

# Your Appwrite API key (required for server operations)
VITE_APPWRITE_API_KEY=your-api-key

# Application Configuration
VITE_APP_NAME=Kri8tive Store
VITE_APP_URL=http://localhost:5173
VITE_SITE_URL=http://localhost:5173

# Feature Flags
VITE_ENABLE_AUTH=true
VITE_ENABLE_STORAGE=true

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_RATE_LIMIT_DURATION=60

# Other Configuration
# Add any other environment variables your application needs below

# To use this file:
# 1. Copy this file to .env
# 2. Replace the placeholder values with your actual Appwrite credentials
# 3. Make sure .env is in your .gitignore file to keep your credentials secure

# For development only
VITE_DEV_MODE=true

# Appwrite Collections
VITE_APPWRITE_PRODUCTS_COLLECTION_ID=products
VITE_APPWRITE_PRODUCT_COLORS_COLLECTION_ID=product_colors
VITE_APPWRITE_USERS_COLLECTION_ID=users
VITE_APPWRITE_ORDERS_COLLECTION_ID=orders
VITE_APPWRITE_ORDER_ITEMS_COLLECTION_ID=order_items

# Payment Gateway
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key

# Image Services
VITE_IMAGEKIT_PUBLIC_KEY=public_your-imagekit-public-key
VITE_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-imagekit-id
VITE_IMAGEKIT_PRIVATE_KEY=private_your-imagekit-private-key

# Development Settings
VITE_NGROK_MODE=false
NODE_ENV=development

# Optional: Telegram Notifications
VITE_TELEGRAM_BOT_TOKEN=your-telegram-bot-token
VITE_TELEGRAM_CHAT_ID=your-telegram-chat-id

# Optional: Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Optional: Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn

# Database Collections (Auto-generated by scripts)
VITE_PRODUCTS_COLLECTION_ID=products
VITE_CUSTOMERS_COLLECTION_ID=customers
VITE_SHOP_MANAGERS_COLLECTION_ID=shop_managers
VITE_SUPER_ADMINS_COLLECTION_ID=super_admins
VITE_CUSTOMIZATION_REQUESTS_COLLECTION_ID=customization_requests
VITE_PRINTING_TECHNIQUES_COLLECTION_ID=printing_techniques
VITE_FABRIC_QUALITIES_COLLECTION_ID=fabric_qualities
VITE_SIZE_PRICES_COLLECTION_ID=size_prices

# Storage Buckets
VITE_STORAGE_BUCKET_ID=kri8tive-storage 